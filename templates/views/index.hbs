<!DOCTYPE html>
<html lang="en">
<head>
   {{>HeaderLinks}}
   <link rel="stylesheet" href="css/style.css">
   <link rel="short icon" href="images/logo.png">
   <title>Weather</title>
</head>
<body>

    <!-- navbar -->

  {{>Navbar}}
    <!-- Text and Carasoul -->

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 col-12 inner mx-auto">
                <div class="col-md-6 col-12 side-left">
                    <h3>Welcome to Weather App</h3>
                    <h1>Get The Latest <span>Weather</span> Info Of Your City</h1>
                    <a href="/weather"><button class="btn btn-primary">Check Weather</button>
                    </a>
                </div>
                <div class="col-md-6 col-12 side-right">

                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                          <div class="carousel-item active">
                            <img class="d-block w-100" src="images/man.jpg" alt="First slide">
                          </div>
                          <div class="carousel-item">
                            <img class="d-block w-100" src="images/man2.jpg" alt="Second slide">
                          </div>
                          <div class="carousel-item">
                            <img class="d-block w-100" src="images/man3.jpg" alt="Third slide">
                          </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="sr-only">Next</span>
                        </a>
                      </div>

                </div>
            </div>
        </div>

    </div>

    <!-- footer -->
    <footer >
